{
  "expo": {
    "name": "Weather Graphics",
    "slug": "weather-graphics",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.weathergraphics.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "package": "com.weathergraphics.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "macos": {
      "bundleIdentifier": "com.weathergraphics.app"
    },
    "scheme": "weather-graphics"
  }
}

